<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secretary Tools"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily utilities collected here"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSendNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Notification"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnViewHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View History"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnSpeechTool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speech Tool"
            android:layout_marginBottom="12dp"/>

        <!-- Event 導線追加 -->
        <Button
            android:id="@+id/btnEventSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event / Schedule"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnAllFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Features"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
