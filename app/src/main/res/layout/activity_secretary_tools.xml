<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ps_tools_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ps_tools_subtitle"
            android:layout_marginBottom="24dp"/>

        <!-- Manual Notification -->
        <Button
            android:id="@+id/btnManualNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ps_tools_notify"
            android:layout_marginBottom="12dp"/>

        <!-- History -->
        <Button
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ps_tools_history"
            android:layout_marginBottom="12dp"/>

        <!-- Speech Tool -->
        <Button
            android:id="@+id/btnSpeechTool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ps_tools_speech"
            android:layout_marginBottom="12dp"/>

        <!-- Events -->
        <Button
            android:id="@+id/btnEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ps_screen_events"
            android:layout_marginBottom="12dp"/>

        <!-- Todo -->
        <Button
            android:id="@+id/btnTodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ps_screen_todo"
            android:layout_marginBottom="12dp"/>

        <!-- Memo -->
        <Button
            android:id="@+id/btnMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ps_screen_memo"
            android:layout_marginBottom="12dp"/>

        <!-- Calculator -->
        <Button
            android:id="@+id/btnCalculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ps_screen_calc"
            android:layout_marginBottom="12dp"/>

        <!-- ðŸ”¥ Persona Passportï¼ˆè¿½åŠ ï¼‰ -->
        <Button
            android:id="@+id/btnPersonaPassport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ps_passport_title"
            android:layout_marginBottom="12dp"/>

        <!-- Dashboard / All Features -->
        <Button
            android:id="@+id/btnOpenAllFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ps_tools_all_features"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>