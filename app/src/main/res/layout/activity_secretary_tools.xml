<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/brand_bg">

    <!-- ヘッダー -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="秘書ツール"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/brand_text_primary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="日常操作をここにまとめました"
        android:textSize="14sp"
        android:textColor="@color/brand_text_secondary" />

    <!-- 区切り -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/brand_divider" />

    <!-- ボタン群 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <!-- 通知 -->
        <Button
            android:id="@+id/btnManualNotify"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="通知を送る"
            android:textAllCaps="false"
            android:backgroundTint="@color/brand_primary"
            android:textColor="@android:color/white" />

        <!-- 履歴 -->
        <Button
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="履歴を見る"
            android:textAllCaps="false"
            android:backgroundTint="@color/brand_surface"
            android:textColor="@color/brand_text_primary" />

        <!-- 読み上げ -->
        <Button
            android:id="@+id/btnSpeechTool"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="読み上げを使う"
            android:textAllCaps="false"
            android:backgroundTint="@color/brand_surface"
            android:textColor="@color/brand_text_primary" />

    </LinearLayout>

</LinearLayout>
