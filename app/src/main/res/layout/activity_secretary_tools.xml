<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/brand_bg">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ps_tools_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/brand_text_primary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/ps_tools_subtitle"
        android:textSize="14sp"
        android:textColor="@color/brand_text_secondary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/brand_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnManualNotify"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/ps_tools_notify"
            android:textAllCaps="false"
            android:backgroundTint="@color/brand_primary"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@string/ps_tools_history"
            android:textAllCaps="false"
            android:backgroundTint="@color/brand_surface"
            android:textColor="@color/brand_text_primary" />

        <Button
            android:id="@+id/btnSpeechTool"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@string/ps_tools_speech"
            android:textAllCaps="false"
            android:backgroundTint="@color/brand_surface"
            android:textColor="@color/brand_text_primary" />

        <!-- NEW: All Features Hub -->
        <Button
            android:id="@+id/btnOpenAllFeatures"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="@string/ps_tools_all_features"
            android:textAllCaps="false"
            android:backgroundTint="@color/brand_primary"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
