<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secretary Tools"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily utilities collected here"
            android:layout_marginBottom="24dp"/>

        <!-- Manual Notification -->
        <Button
            android:id="@+id/btnManualNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manual Notification"
            android:layout_marginBottom="12dp"/>

        <!-- History（追加） -->
        <Button
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"
            android:layout_marginBottom="12dp"/>

        <!-- Speech Tool -->
        <Button
            android:id="@+id/btnSpeechTool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speech Tool"
            android:layout_marginBottom="12dp"/>

        <!-- Events -->
        <Button
            android:id="@+id/btnEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Events"
            android:layout_marginBottom="12dp"/>

        <!-- Todo -->
        <Button
            android:id="@+id/btnTodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todo"
            android:layout_marginBottom="12dp"/>

        <!-- Memo -->
        <Button
            android:id="@+id/btnMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memo"
            android:layout_marginBottom="12dp"/>

        <!-- Calculator -->
        <Button
            android:id="@+id/btnCalculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:layout_marginBottom="12dp"/>

        <!-- Dashboard / All Features -->
        <Button
            android:id="@+id/btnOpenAllFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
