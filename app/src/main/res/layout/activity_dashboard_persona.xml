<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/brand_bg">

    <!-- ===== Persona Header ===== -->
    <TextView
        android:id="@+id/txtPersonaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secretary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/brand_primary"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/brand_divider"/>

    <!-- ===== Persona Card ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/brand_card_bg"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imgPersonaCard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@color/brand_surface"/>

        <TextView
            android:id="@+id/txtNextLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="本日の状況をお伝えします。"
            android:textSize="16sp"
            android:textColor="@color/brand_primary"/>

        <Button
            android:id="@+id/btnOpenTools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="秘書ツールを開く"/>
    </LinearLayout>

</LinearLayout>
