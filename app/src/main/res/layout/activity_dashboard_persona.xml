<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ===== 背景エリア（上部80%） ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/psPersonaBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:scaleType="centerCrop"
            android:contentDescription="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />
    </LinearLayout>

    <!-- ===== ヘッダー（上部オーバーレイ） ===== -->
    <LinearLayout
        android:id="@+id/headerArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/txtPersonaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_preferences"
            android:tint="@android:color/white" />
    </LinearLayout>

    <!-- ===== 下部グラデーション ===== -->
    <View
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="bottom"
        android:background="@drawable/ps_dashboard_gradient" />

    <!-- ===== UIカード（スクロール対応） ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/ps_dashboard_card_bg">

            <TextView
                android:id="@+id/txtTodayCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_today_count_preview"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtNextEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/dashboard_next_event_preview"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnSpeechTool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/dashboard_open_speech" />

            <!-- ナビバー逃がし -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
        </LinearLayout>

    </ScrollView>

</FrameLayout>
