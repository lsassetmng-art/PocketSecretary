<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PocketSecretary は “読むだけ” の秘書です"
            android:textSize="20sp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="できること\n・今日/明日の予定を表示（READ ONLY）\n・通知で軽くリマインド\n\nまずは必要な権限だけ許可してください。"
            android:paddingBottom="12dp"/>

        <TextView
            android:id="@+id/txtOnboardingState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="権限状態"
            android:paddingBottom="12dp"/>

        <Button
            android:id="@+id/btnGrantCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="カレンダー権限（READ）を許可" />

        <Button
            android:id="@+id/btnGrantNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通知権限を許可"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnStartApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="はじめる"
            android:layout_marginTop="14dp"/>
    </LinearLayout>
</ScrollView>
