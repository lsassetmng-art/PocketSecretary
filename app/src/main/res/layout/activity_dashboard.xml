<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtTodayCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_today_count_preview"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txtNextEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/dashboard_next_event_preview"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnSpeechTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/dashboard_open_speech" />
</LinearLayout>