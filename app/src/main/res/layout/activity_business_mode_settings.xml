<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootBusinessMode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textBusinessModeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/business_mode_title"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Switch
        android:id="@+id/switchBusinessMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/business_mode_switch"
        app:layout_constraintTop_toBottomOf="@id/textBusinessModeTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textBusinessModeNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/business_mode_note"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/switchBusinessMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
