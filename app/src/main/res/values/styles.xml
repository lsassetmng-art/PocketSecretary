<?xml version='1.0' encoding='utf-8'?>
<resources>

    <style name='BrandTitle'>
        <item name='android:textSize'>20sp</item>
        <item name='android:textColor'>@color/brand_primary</item>
        <item name='android:textStyle'>bold</item>
    </style>

    <style name='BrandSubtitle'>
        <item name='android:textSize'>14sp</item>
        <item name='android:textColor'>@color/brand_secondary</item>
    </style>

    <style name='BrandButton'>
        <item name='android:background'>@drawable/brand_button_bg</item>
        <item name='android:textColor'>@android:color/white</item>
        <item name='android:textAllCaps'>false</item>
        <item name='android:padding'>12dp</item>
    </style>

</resources>