<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lsam.pocketsecretary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>

    <application
        android:name=".PocketSecretaryApp"
        android:theme="@style/Theme.PocketSecretary"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:enableOnBackInvokedCallback="true">

        <!-- Launcher -->
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity android:name=".ui.background.BackgroundSelectActivity" android:exported="false" />
        <activity android:name=".ui.settings.SettingsActivity" android:exported="false" />
        <activity android:name=".ui.archive.ArchiveActivity" android:exported="false" />
        <activity android:name=".ui.persona.PersonaSelectActivity" android:exported="false" />
        <activity android:name=".ui.tools.SecretaryToolsActivity" android:exported="false" />
        <activity android:name=".ui.secretary.SecretaryListActivity" android:exported="false" />
        <activity android:name=".ui.history.HistoryActivity" android:exported="false" />
        <activity android:name=".ui.billing.PremiumActivity" android:exported="false" />
        <activity android:name=".ui.speech.SpeechToolActivity" android:exported="false" />
        <activity android:name=".ManualNotificationActivity" android:exported="false" />

        <!-- Event Screens -->
        <activity android:name=".ui.event.EventListActivity" android:exported="false" />
        <activity android:name=".ui.event.EventEditActivity" android:exported="false" />

        <!-- Alarm Receiver -->
        <receiver
            android:name=".receiver.EventAlarmReceiver"
            android:exported="false" />

        <!-- Boot Restore -->
        <receiver
            android:name=".receiver.BootCompletedReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

            <!-- =============================== -->
        <!-- Skeleton Feature Hub -->
        <!-- =============================== -->
        <activity
            android:name=".ui.hub.AllFeaturesActivity"
            android:exported="false" />

        <!-- =============================== -->
        <!-- Skeleton Features -->
        <!-- =============================== -->
        <activity android:name=".ui.todo.TodoListActivity" android:exported="false" />
        <activity android:name=".ui.todo.TodoEditActivity" android:exported="false" />

        <activity android:name=".ui.calculator.CalculatorActivity" android:exported="false" />

        <activity android:name=".ui.memo.MemoListActivity" android:exported="false" />
        <activity android:name=".ui.memo.MemoEditActivity" android:exported="false" />

        <activity android:name=".ui.library.LibraryActivity" android:exported="false" />

        <activity android:name=".ui.transit.TransitFareActivity" android:exported="false" />

        <activity android:name=".ui.business.BusinessModeActivity" android:exported="false" />
        <activity android:name=".ui.businesscard.BusinessCardLinkActivity" android:exported="false" />
        <activity android:name=".ui.mbo.MboLinkActivity" android:exported="false" />
        <activity android:name=".ui.request.RequestHubActivity" android:exported="false" />

        <activity android:name=".ui.consult.ConsultStubActivity" android:exported="false" />
        <activity android:name=".ui.summary.SummaryStubActivity" android:exported="false" />

    </application>

</manifest>
